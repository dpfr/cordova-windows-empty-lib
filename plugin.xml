<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
           id="cordova-windows-empty-lib"
           version="0.1.1">

    <name>Windows Empty Lib</name>
    <description>A small plugin adding an empty Portable class library in order to avoid problems with Windows Phone 8.1 enterprise deployement.</description>
    <license>MIT license</license>
    <keywords>cordova,windows,enterprise</keywords>
    <repo>https://github.com/dpfr/cordova-windows-empty-lib.git</repo>
    <issue>https://github.com/dpfr/cordova-windows-empty-lib/issues</issue>

    <!-- windows universal apps (Windows 8.1, Windows Phone 8.1, Windows 8.0) -->
    <platform name="windows">
			<source-file src="EmptyLibrary.dll" />
    </platform>

</plugin>